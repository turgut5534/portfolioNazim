<%- include("partials/header") %>
  <div class="sidebar" id="sidebar">
    <h2>Dashboard</h2>
    <div class="menu" role="navigation" aria-label="Main">
      <a href="/admin/profile">Profile Info</a>
      <a href="">My Skills</a>
      <a href="projects">Projects</a>
      <a href="#">My Experiences</a>
      <a href="/admin/settings">Settings</a>
      <a class="logout-btn" href="/admin/logout">Log out</a>
    </div>
  </div>

  <div class="overlay" id="overlay" tabindex="-1" aria-hidden="true"></div>

  <div class="content" id="content">
    <h1>Profile Info</h1>

    <div class="profile-photo">
      <img src="/photos/<%= user.photourl %>" alt="Profile Photo">
    </div>

    <form action="/admin/profile/update" method="POST">

      <div class="form-group">
        <label>Summary</label>
        <textarea name="summary" rows="4"><%= user.summary %></textarea>
      </div>

      <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" value="<%= user.email %>">
      </div>

      <div class="form-group">
        <label>Full Name</label>
        <input type="text" name="fullname" value="<%= user.fullname %>">
      </div>

      <div class="form-group">
        <label>Age</label>
        <input type="number" name="age" value="<%= user.age %>">
      </div>

      <div class="form-group">
        <label>Address</label>
        <input type="text" name="address" value="<%= user.user_info?.address || '' %>">
      </div>

      <div class="form-group">
        <label>Phone</label>
        <input type="text" name="phone" value="<%= user.user_info?.phone || '' %>">
      </div>

      <div class="form-group">
        <label>LinkedIn</label>
        <input type="text" name="linkedin" value="<%= user.user_info?.linkedIn || '' %>">
      </div>

      <div class="form-group">
        <label>Instagram</label>
        <input type="text" name="instagram" value="<%= user.user_info?.instagram || '' %>">
      </div>

      <div class="form-group">
        <label>GitHub</label>
        <input type="text" name="github" value="<%= user.user_info?.github || '' %>">
      </div>

      <div class="form-group">
        <label>Twitter</label>
        <input type="text" name="twitter" value="<%= user.user_info?.twitter || '' %>">
      </div>

      <div class="form-group">
        <label>Facebook</label>
        <input type="text" name="facebook" value="<%= user.user_info?.facebook || '' %>">
      </div>

      <div class="form-group">
        <label>Degree</label>
        <input type="text" name="degree" value="<%= user.user_info?.degree || '' %>">
      </div>

      <button type="submit">Save Changes</button>
    </form>

  </div>

<%- include("partials/footer") %>